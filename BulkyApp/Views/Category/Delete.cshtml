@model Category

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-4 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
            <div asp-validation-summary="All"></div>
        </div>
        <div class="mb-4 row p-1">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" disabled class="form-control" />
           
        </div>
        <div class="mb-4 row p-1">
            <label class="p-0" asp-for="DisplayOrder"></label>
            <input asp-for=DisplayOrder disabled class="form-control" />
         
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button class="btn btn-danger form-control" type="submit">
                    Delete
                </button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-dark form-control">Go To List </a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}